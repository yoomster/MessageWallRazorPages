@model MessageWallRazorPages.Pages.AddressPageModel
@{
}


<h1>Use this page for leaving your address information </h1>


<form method="post">
    <div class="form-group">
        <label asp-for="Address.StreetName"> </label>
        <input asp-for="Address.StreetName" type="text" placeholder="Street name" />
    </div>

    <div class="form-group">

        <label asp-for="Address.HouseNr"> </label>
        <input asp-for="Address.HouseNr" type="text" placeholder="House nr" />
    </div>

    <div class="form-group">
        <label asp-for="Address.Postcode"> </label>
        <input asp-for="Address.Postcode" type="text" placeholder="Postcode" />
    </div>

    <div class="form-group">
        <label asp-for="Address.City"> </label>
        <input asp-for="Address.City" type="text" placeholder="City" />
    </div>

        <button type="submit" class="btn btn-primary">Submit</button>
</form>


